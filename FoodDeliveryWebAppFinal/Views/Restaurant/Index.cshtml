@model FoodDeliveryWebAppFinal.Models.Restaurant

<div class="container py-4 d-flex justify-content-center align-items-center" style="background-color: #fff6e9;">
    <div class="auth-card text-center" style="
        background: papayawhip;
        border-radius: 12px;
        width: 100%;
        max-width: 700px;
        padding: 2rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    ">
        <img src="@Model.PhotoUrl" alt="@Model.Name" class="img-fluid rounded mb-3" style="
            max-width: 150px;
            border: 3px solid #ff9800;
            border-radius: 50%;
        ">
        <h2 style="color: #ff9800; font-weight: 600;">@Model.Name</h2>
        <p style="font-size: 1rem; color: #333;">@Model.Description</p>
        <p style="font-size: 1rem; color: #333;">
            <strong style="color: #ff9800;">Operating Hours:</strong> @Model.OperatingHours
        </p>
        <p style="font-size: 1rem; color: #333;">
            <strong style="color: #ff9800;">Balance:</strong> @Model.Balance.ToString("F2") MKD
        </p>

        <div class="mt-4">
            <a asp-action="MenuItems" class="btn btn-sm" style="
                background-color: #ff9800;
                color: white;
                padding: 8px 16px;
                font-weight: 500;
                border-radius: 5px;
                margin-right: 10px;
            ">
                <i class="fas fa-utensils"></i> Menu Items
            </a>
            <a asp-action="Orders" class="btn btn-sm" style="
                background-color: #ff9800;
                color: white;
                padding: 8px 16px;
                font-weight: 500;
                border-radius: 5px;
            ">
                <i class="fas fa-receipt"></i> Check Orders
            </a>
        </div>
    </div>
</div>

<style>
    .auth-card {
        background: papayawhip;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .auth-card h2 {
        color: #ff9800;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .btn-sm {
        font-size: 1rem;
        font-weight: 500;
    }
</style>
