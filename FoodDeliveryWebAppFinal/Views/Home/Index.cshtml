@model dynamic

@section Styles {
    <style>
        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, #ff9800 0%, #ff7043 100%);
            padding: 4rem 0;
            margin-bottom: 4rem;
            border-radius: 0 0 50px 50px;
            box-shadow: 0 4px 20px rgba(255, 152, 0, 0.2);
        }

        .hero-content {
            text-align: center;
            color: white;
            max-width: 800px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }

        .hero-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            margin-bottom: 2rem;
        }

        /* Search Container */
        .search-container {
            position: relative;
            margin: -2rem auto 3rem;
            max-width: 700px;
            z-index: 10;
        }

        .search-input {
            width: 100%;
            padding: 1.2rem 1.5rem 1.2rem 3.5rem;
            border-radius: 50px;
            border: none;
            background-color: white;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        .search-input:focus {
            outline: none;
            box-shadow: 0 8px 25px rgba(255, 152, 0, 0.2);
            transform: translateY(-2px);
        }

        .search-icon {
            position: absolute;
            left: 1.5rem;
            top: 50%;
            transform: translateY(-50%);
            color: #ff9800;
            font-size: 1.2rem;
        }

        /* Categories Section */
        .categories-section {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 3rem;
        }

        .category-item {
            transition: all 0.3s ease;
            margin-bottom: 0.8rem;
            border: none;
            background: white;
            border-radius: 15px;
        }

        .category-item:hover {
            transform: translateX(10px);
            background-color: #fff3e0;
        }

        .category-link {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            color: #2c3e50;
            text-decoration: none;
            font-weight: 500;
            border-radius: 15px;
            transition: all 0.3s ease;
        }

        .category-link:hover {
            color: #ff7043;
        }

        .category-icon {
            margin-right: 1rem;
            color: #ff9800;
        }

        /* Restaurants Section */
        .section-title {
            position: relative;
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 2.5rem;
            padding-bottom: 1rem;
            font-size: 1.8rem;
        }

        .section-title::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            height: 4px;
            width: 80px;
            background: linear-gradient(45deg, #ff9800, #ff7043);
            border-radius: 2px;
        }

        .restaurant-card {
            height: 100%;
            border: none;
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.3s ease;
            background: white;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .restaurant-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .restaurant-image-container {
            position: relative;
            overflow: hidden;
            height: 220px;
        }

        .restaurant-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: all 0.5s ease;
        }

        .restaurant-card:hover .restaurant-image {
            transform: scale(1.1);
        }

        .restaurant-content {
            padding: 1.8rem;
            background: white;
        }

        .restaurant-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 0.8rem;
        }

        .restaurant-description {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .restaurant-meta {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
            color: #666;
            font-size: 0.9rem;
        }

        .restaurant-rating {
            display: flex;
            align-items: center;
            margin-right: 1rem;
        }

        .rating-star {
            color: #ffc107;
            margin-right: 0.3rem;
        }

        .view-menu-btn {
            background: linear-gradient(45deg, #ff9800, #ff7043);
            border: none;
            padding: 1rem 2rem;
            border-radius: 50px;
            color: white;
            font-weight: 600;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.9rem;
            width: 100%;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        .view-menu-btn:hover {
            background: linear-gradient(45deg, #ff7043, #ff9800);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 152, 0, 0.3);
            color: white;
            text-decoration: none;
        }

        .notification {
            background: linear-gradient(45deg, #ff9800, #ff7043);
            color: white;
            border: none;
            border-radius: 15px;
            padding: 1.2rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 15px rgba(255, 152, 0, 0.2);
            text-align: center;
            font-weight: 500;
        }

        /* Responsive Design */
        @* Use @@ to escape the @ symbol for media queries in Razor views *@
        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2rem;
            }
            
            .hero-subtitle {
                font-size: 1rem;
            }
            
            .search-input {
                padding: 1rem 1.5rem 1rem 3rem;
                font-size: 1rem;
            }
            
            .section-title {
                font-size: 1.5rem;
            }
        }
    </style>
}

@if (TempData["Notification"] != null)
{
    <div class="notification">
        @TempData["Notification"]
    </div>
}

<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Discover Delicious Food Near You</h1>
        <p class="hero-subtitle">Order from the best local restaurants with easy, on-demand delivery</p>
    </div>
</div>

<div class="container">
    <div class="search-container">
        <i class="fas fa-search search-icon"></i>
        <form method="get" asp-action="Search">
            <input type="text" 
                   name="query" 
                   class="search-input" 
                   placeholder="Search for your favorite restaurants or dishes...">
        </form>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="categories-section">
                <h4 class="section-title">Categories</h4>
                <div class="categories-list">
                    @if (ViewData["Categories"] != null)
                    {
                        foreach (var category in ViewData["Categories"] as List<FoodDeliveryWebAppFinal.Models.Category>)
                        {
                            <div class="category-item">
                                <a asp-action="MenuItemsByCategory" asp-route-id="@category?.CategoryID" class="category-link">
                                    <i class="fas fa-utensils category-icon"></i>
                                    @category?.Name
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <h4 class="section-title">Featured Restaurants</h4>
            <div class="row g-4">
                @if (ViewData["Restaurants"] != null)
                {
                    foreach (var restaurant in ViewData["Restaurants"] as List<FoodDeliveryWebAppFinal.Models.Restaurant>)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="restaurant-card">
                                <div class="restaurant-image-container">
                                    <img src="@(restaurant?.PhotoUrl ?? "/images/default-restaurant.jpg")" 
                                         class="restaurant-image" 
                                         alt="@(restaurant?.Name ?? "Restaurant")">
                                </div>
                                <div class="restaurant-content">
                                    <h5 class="restaurant-title">@(restaurant?.Name ?? "Restaurant")</h5>
                                    <div class="restaurant-meta">
                                        <div class="restaurant-rating">
                                            <i class="fas fa-star rating-star"></i>
                                            <span>4.5</span>
                                        </div>
                                        <div class="restaurant-time">
                                            <i class="far fa-clock me-1"></i>
                                            <span>30-45 min</span>
                                        </div>
                                    </div>
                                    <p class="restaurant-description">@(restaurant?.Description ?? "No description available")</p>
                                    <a asp-action="MenuItemsByRestaurant" 
                                       asp-route-id="@restaurant?.RestaurantID" 
                                       class="view-menu-btn">
                                        Explore Menu
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <p class="text-muted">No restaurants available at the moment.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Add lazy loading for images
        document.addEventListener("DOMContentLoaded", function() {
            var lazyImages = [].slice.call(document.querySelectorAll("img.restaurant-image"));

            if ("IntersectionObserver" in window) {
                let lazyImageObserver = new IntersectionObserver(function(entries, observer) {
                    entries.forEach(function(entry) {
                        if (entry.isIntersecting) {
                            let lazyImage = entry.target;
                            lazyImage.src = lazyImage.dataset.src;
                            lazyImage.classList.remove("lazy");
                            lazyImageObserver.unobserve(lazyImage);
                        }
                    });
                });

                lazyImages.forEach(function(lazyImage) {
                    lazyImageObserver.observe(lazyImage);
                });
            }
        });
    </script>
}
