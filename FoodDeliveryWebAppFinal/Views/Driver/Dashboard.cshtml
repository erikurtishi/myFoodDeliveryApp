@model IEnumerable<FoodDeliveryWebAppFinal.Models.Order>

@{
ViewData["Title"] = "Driver Dashboard";
}

<div class="container py-4 d-flex justify-content-center align-items-center" style="background-color: #fff6e9;">
    <div class="auth-card" style="
        background: papayawhip;
        border-radius: 12px;
        width: 100%;
        max-width: 900px;
        padding: 2rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    ">
        <h2 style="color: #ff9800; font-weight: 600; text-align: center;">Driver Dashboard</h2>

        @if (!Model.Any())
        {
        <p style="color: #ff9800; text-align: center; font-weight: 500;">No orders assigned to you at the moment.</p>
        }
        else
        {
        <div class="row">
            @foreach (var order in Model)
            {
            <div class="col-md-6 mb-4">
                <div class="card p-3" style="
                            background-color: #fff6e9;
                            border-radius: 8px;
                            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
                        ">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #ff9800; font-weight: 600;">Order #@order.OrderID</h5>
                        <p class="card-text">
                            <strong>Customer:</strong> @(order.User?.FullName ?? "N/A") <br>
                            <strong>Address:</strong> @(order.User?.Address ?? "N/A") <br>
                            <strong>Phone:</strong> @(order.User?.PhoneNumber ?? "N/A") <br>
                            <strong>Status:</strong> <span style="color: @(order.Status == "Out for Delivery" ? "green" : "red"); font-weight: bold;">@order.Status</span> <br>
                            <strong>Total:</strong> @order.TotalAmount.ToString("C") <br>
                            <strong>Created:</strong> @order.CreatedAt.ToString("g") <br>
                        </p>

                        <div>
                            <h6 style="color: #ff9800;">Order Items:</h6>
                            @if (order.OrderItems != null && order.OrderItems.Any())
                            {
                            <ul>
                                @foreach (var item in order.OrderItems)
                                {
                                <li>@item.MenuItem?.Name x @item.Quantity - @item.SubTotal.ToString("C")</li>
                                }
                            </ul>
                            }
                            else
                            {
                            <p style="color: gray;">No items in this order.</p>
                            }
                        </div>

                        @if (order.Status == "Out for Delivery")
                        {
                        <form asp-action="MarkDelivered" method="post" class="mt-2">
                            <input type="hidden" name="orderId" value="@order.OrderID" />
                            <button type="submit" class="btn btn-success w-100">Mark Delivered</button>
                        </form>
                        }
                        else
                        {
                        <p style="color: gray; text-align: center;">Delivered</p>
                        }
                    </div>
                </div>
            </div>
            }
        </div>
        }
    </div>
</div>