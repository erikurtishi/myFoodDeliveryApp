@using Microsoft.AspNetCore.Identity
@inject UserManager<FoodDeliveryWebAppFinal.Models.AppUser> UserManager
@inject SignInManager<FoodDeliveryWebAppFinal.Models.AppUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodDeliveryWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/css/intlTelInput.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            background-color: #fff6e9; 
        }

        .content-wrapper {
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
            background-color: #fff6e9; 
            padding: 20px;
            border-radius: 8px;
        }

        .navbar-custom {
            background-color: papayawhip;
            border-bottom: 2px solid #ff9800;
        }

        .navbar-brand img {
            height: 40px;
            margin-right: 10px;
        }

        .navbar-title {
            font-size: 1.5rem;
            color: #ff9800;
            font-weight: 600;
        }

        .nav-link {
            color: #ff9800 !important;
            font-weight: 500;
        }

        .nav-link:hover {
            text-decoration: underline;
        }

        footer {
            background-color: papayawhip;
            color: #ff9800;
            padding: 20px 0;
            text-align: center;
            border-top: 2px solid #ff9800;
        }

        footer a {
            color: #ff9800;
            text-decoration: none;
            font-weight: 500;
        }

        footer a:hover {
            text-decoration: underline;
        }

        footer p {
            margin: 0;
        }
    </style>
</head>
<body>
<div class="content-wrapper">
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" />
                    <span class="navbar-title">FoodDeliveryWebApp</span>
                </a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        @if (User.IsInRole("BasicUser"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Balance" asp-controller="Home">Check Balance</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="OrderHistory" asp-controller="Home">Order History</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Checkout" asp-controller="Home">Checkout</a>
                            </li>
                        }
                        @if (User.IsInRole("Restaurant"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="Restaurant">Restaurant Dashboard</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="Admin">Manage Users</a>
                            </li>
                        }
                    </ul>
                </div>

                <div class="ms-auto">
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            if (currentUser != null)
                            {
                                <li class="nav-item">
                                    <a class="btn btn-outline-warning nav-link" asp-controller="Account" asp-action="Edit">Edit Profile</a>
                                </li>
                            }

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link">
                                        Logout (
                                        @{
                                            if (currentUser != null)
                                            {
                                                @currentUser.FullName
                                            }
                                        }
                                        )
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - FoodDeliveryWebApp</p>
            <p>
                Built by Foodini Team. <br />
                <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a> | <a href="#">Contact Us</a>
            </p>
        </div>
    </footer>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
