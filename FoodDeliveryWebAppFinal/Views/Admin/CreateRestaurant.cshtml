@model FoodDeliveryWebAppFinal.Models.CreateRestaurantViewModel

@section Styles {
    <style>
        /* Hero Section */
        .admin-hero {
            background: linear-gradient(135deg, #ff9800 0%, #ff7043 100%);
            padding: 4rem 0;
            margin-bottom: -3rem;
            border-radius: 0 0 50px 50px;
            box-shadow: 0 4px 20px rgba(255, 152, 0, 0.2);
            text-align: center;
            color: white;
            position: relative;
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }

        /* Admin Card */
        .admin-card {
            background: white;
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            position: relative;
            z-index: 10;
            margin-bottom: 2rem;
            max-width: 800px;
            width: 100%;
        }

        /* Form Controls */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-control {
            width: 100%;
            padding: 1rem 1.5rem;
            border-radius: 25px;
            border: 2px solid #e0e0e0;
            background-color: white;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: #ff9800;
            box-shadow: 0 4px 15px rgba(255, 152, 0, 0.1);
        }

        textarea.form-control {
            min-height: 100px;
            resize: vertical;
        }

        /* Validation */
        .text-danger {
            color: #f44336;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: block;
        }

        /* Buttons */
        .create-btn {
            background: linear-gradient(45deg, #ff9800, #ff7043);
            border: none;
            padding: 1rem 2rem;
            border-radius: 25px;
            color: white;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 1rem;
        }

        .create-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 152, 0, 0.3);
        }

        .back-btn {
            display: inline-block;
            background: white;
            border: 2px solid #ff9800;
            color: #ff9800;
            padding: 0.8rem 1.5rem;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
            margin-top: 1rem;
        }

        .back-btn:hover {
            background: #fff3e0;
            color: #ff7043;
            text-decoration: none;
            transform: translateY(-2px);
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .admin-hero {
                padding: 3rem 0;
            }

            .hero-title {
                font-size: 2rem;
            }

            .admin-card {
                padding: 1.5rem;
                margin: 0 1rem;
            }

            .form-control {
                padding: 0.8rem 1.2rem;
            }
        }
    </style>
}

<div class="admin-hero">
    <div class="container">
        <h1 class="hero-title">Create Restaurant</h1>
    </div>
</div>

<div class="container py-5">
    <div class="d-flex justify-content-center">
        <div class="admin-card">
            <form asp-action="CreateRestaurant" method="post">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Enter address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input id="phoneNumber" asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            <input type="hidden" id="fullPhoneNumber" name="PhoneNumber" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RestaurantName" class="form-label">Restaurant Name</label>
                            <input asp-for="RestaurantName" class="form-control" placeholder="Enter restaurant name" />
                            <span asp-validation-for="RestaurantName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Enter restaurant description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="OperatingHours" class="form-label">Operating Hours</label>
                            <input asp-for="OperatingHours" class="form-control" placeholder="Enter operating hours" />
                            <span asp-validation-for="OperatingHours" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PhotoUrl" class="form-label">Image URL</label>
                            <input asp-for="PhotoUrl" class="form-control" placeholder="Enter image URL" />
                            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="create-btn">Create Restaurant</button>
                    <div class="mt-3">
                        <a asp-action="Index" asp-controller="Admin" class="back-btn">Back to Dashboard</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- intl-tel-input Script -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/intlTelInput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/utils.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var input = document.querySelector("#phoneNumber");
        var hiddenInput = document.querySelector("#fullPhoneNumber");

        var iti = window.intlTelInput(input, {
            initialCountry: "auto",
            geoIpLookup: function (callback) {
                fetch('https://ipinfo.io/json?token=YOUR_IPINFO_TOKEN')
                    .then(response => response.json())
                    .then(data => callback(data.country))
                    .catch(() => callback('US'));
            },
            preferredCountries: ['mk', 'us', 'gb', 'fr', 'it'],
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/utils.js"
        });

        input.addEventListener("blur", function () {
            hiddenInput.value = iti.getNumber();
        });
    });
</script>

